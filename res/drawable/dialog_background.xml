<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
	<item>
		<shape
		    android:shape="rectangle"
			android:dither="true">
			<corners android:radius="3dp"/>
			<solid android:color="#eee" />
		</shape>
	</item>

	<item
	    android:bottom="2dp"
	    android:right="1dp"
	    android:left="1dp"
	    android:top="1dp">
		<shape
		    android:shape="rectangle"
			android:dither="true">
			<corners android:radius="3dp" />
			<solid android:color="#f2f2f2" />
			<padding
			    android:bottom="8dp"
				android:left="8dp"
				android:right="8dp"
				android:top="8dp" />
		</shape>
	</item>

</layer-list>